    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
        ,
        {
            "type": "java",
            "name": "Launch Spring Boot (Run)",
            "request": "launch",
            "mainClass": "com.project.lms.Application",
            "projectName": "LibraryManagementSystem",
            "args": "",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Attach to Spring Boot",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005
        }
    ]
}